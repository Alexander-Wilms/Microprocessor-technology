 * Parameter:
 * *value
 * Rückgabe:
 * unsigned char
 */
unsigned char ulong2bcd_unpk(unsigned long* value){

}

/*
 * Parameter:
 * value
 * Rückgabe:
 * unsigned char
 */
unsigned char ulong2bcd_pk(unsigned long value){

}
