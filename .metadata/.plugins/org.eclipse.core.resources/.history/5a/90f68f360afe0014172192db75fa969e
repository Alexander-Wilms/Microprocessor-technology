 * Parameter:
 * *value
 * Rueckgabe:
 * unsigned char
 */
unsigned char ulong2bcd_unpk(unsigned long* value){
	unsigned long z;
	unsigned long r;
	if(value == 0){

	} else {
		z = *value%10;
		r = (*value - z)/10;
		value = (r)*10+z;
	}
	return z;
}

